<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ProjectCreator.BusyWindow"
        Width="380" Height="160"
        Title="Пожалуйста, подождите"
        CanResize="False"
        WindowStartupLocation="CenterOwner">
  <StackPanel Margin="16" Spacing="12">
    <TextBlock Text="Выполняется создание проекта..." FontSize="16"/>
    <ProgressBar IsIndeterminate="True" Height="8"/>
    <TextBlock TextWrapping="Wrap" Foreground="Gray" FontSize="12"
               Text="Окно закроется автоматически после завершения."/>
  </StackPanel>
</Window>


